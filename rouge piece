Boss redzlib = loadstring(game:HttpGet("https://gist.githubusercontent.com/MjContiga1/54c07e52fc2aab8873b68d91a71d11c6/raw/fb4f1d6a7c89465f3 b39bc00eeff09af24b88f20/Redz%20hub.lua"))()

local Window = redzlib:MakeWindow({
    Title = "โร้คพีช สคริปพม่าๆ",
    SubTitle = "ใช้ไปอย่าบ่น",
    SaveFolder = "SorcererBossFarm"
})

Window:AddMinimizeButton({
    Button = { Image = "rbxassetid://139438145143663", BackgroundTransparency = 0, Size = UDim2.new(0,40,0,40) },
    Corner = { CornerRadius = UDim.new(0,10) },
    Position = UDim2.new(0,10,0,10)
})

local Tab = Window:MakeTab({"Boss Farm", "rbxassetid://7733960981"})

_G.AutoTPBoss = false
_G.AutoM1Boss = false
_G.Noclip = false
_G.SelectedBoss = nil

-- Noclip
spawn(function()
    while task.wait(0.1) do
        if _G.Noclip and game.Players.LocalPlayer.Character then
            for _, part in game.Players.LocalPlayer.Character:GetDescendants() do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
            game.Players.LocalPlayer.Character.HumanoidRootPart.Velocity = Vector3.new(0,0,0)
            game.Players.LocalPlayer.Character.Humanoid:ChangeState(11)
        end
    end
end)

-- Weapon Dropdown
local WeaponDrop
local function UpdateWeapons()
    local w = {}
    for _, t in game.Players.LocalPlayer.Backpack:GetChildren() do
        if t:IsA("Tool") then table.insert(w, t.Name) end
    end
    if #w == 0 then table.insert(w, "ไม่มีอาวุธ") end
    if not WeaponDrop then
        WeaponDrop = Tab:AddDropdown({Name="เลือกอาวุธ", Options=w, Default=w[1], Callback=function(v) _G.SelectedWeapon = v ~= "ไม่มีอาวุธ" and v or nil end})
    else
        WeaponDrop:Refresh(w, w[1])
        _G.SelectedWeapon = w[1]
    end
    UpdateWeapons()
    spawn(function() while task.wait(3) do UpdateWeapons() end end)
end

-- Boss mapping (path จริง ๆ ในเกม)
local BossPaths = {
    ["Yuta"] = "Jujutsu Highschool.Boss.Yuta",
    ["Sukuna"] = "Throne Isle.Boss.Sukuna",
    ["Gojo"] = "Throne Isle.BBoss.Gojo",
    ["David"] = "Throne Isle.Boss.David",
    ["Akaza"] = "Throne Isle.Boss.Akaza",
    ["Tanjiro"] = "Forge Isle.Boss.Tanjiro",
    ["Kaneki"] = "Abyss Hill [Upper].Boss.Kaneki",
    ["Shigaraki"] = "Rogue Town.Boss.Shikaraki",
    ["Aizen"] = "Huecomundo.Aizen",
    ["Mihawk"] = "Glacier Isle.Mihawk.Mihawk",
    ["Sung Jin Woo"] = "Rogue Town [Backside].Boss.Sung Jin Woo"
}

-- Boss Dropdown
Tab:AddDropdown({
    Name = "เลือกบอส",
    Options = {"Yuta", "Sukuna", "Gojo", "David", "Akaza", "Tanjiro", "Kaneki", "Shigaraki", "Aizen", "Mihawk", "Sung Jin Woo"},
    Default = "Yuta",
    Callback = function(v) _G.SelectedBoss = v end
})

-- Noclip Toggle
Tab:AddToggle({Name = "Noclip (จำเป็น)", Default = true, Callback = function(v) _G.Noclip = v end})

-- Auto TP Boss
Tab:AddToggle({
    Name = "วาปไปตีบอสออโต้",
    Default = false,
    Callback = function(state)
        _G.AutoTPBoss = state
        spawn(function()
            while _G.AutoTPBoss do
                task.wait()
                pcall(function()
                    local path = BossPaths[_G.SelectedBoss]
                    if not path then return end

                    local parts = string.split(path, ".")
                    local current = workspace.Main.Characters
                    local bossModel = nil

                    for _, name in parts
                        current = current:FindFirstChild(name)
                        if not current then break end
                        bossModel = current
                    end

                    if bossModel and bossModel:FindFirstChild("HumanoidRootPart") and bossModel:FindFirstChild("Humanoid") and bossModel.Humanoid.Health > 0 then
                        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = bossModel.HumanoidRootPart.CFrame * CFrame.new(0, -10, 18)
                    end
                end)
            end
        end)
    end
})

-- Auto M1 Boss
Tab:AddToggle({
    Name = "ตีรัวๆ",
    Default = false,
    Callback = FireServer("Server", "Sword", "M1s", _G.SelectedWeapon, 4)
        end
    end
})

-- Auto Equip
spawn(function()
    while task.wait(0.5) do
        if (_G.AutoTPBoss or _G.AutoM1Boss) and _G.SelectedWeapon then
            local tool = game.Players.LocalPlayer.Backpack:FindFirstChild(_G.SelectedWeapon)
            if tool and game.Players.LocalPlayer.Character then
                game.Players.LocalPlayer.Character.Humanoid:EquipTool(tool)
            end
        end
    end
end)

Tab:AddLabel("ทุ่งฝ้ายอันอบอุ่น Noclipbelยรักและตีด้วยแส้")
Tab:AddLabel("เปิด Noclip+M1+เลือกบอส ละตีจบไอ้พม่า")
Tab:AddLabel("Mix Na Hee Nigga 56")

UpdateWeapons()
